<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zhuanfa_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="8dp"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/weibo_zhuanfa_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_zhuanfa_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="AcFun"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_weibo_zhuanfa_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:text="123456sdsasxsaxxasxsaxsawawaswdddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"/>

                <com.werb.weibo.widget.ninegridlayout.NineGridlayout
                    android:layout_marginTop="8dp"
                    android:id="@+id/iv_zhuanfa_ngrid_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <com.werb.weibo.widget.ninegridlayout.OneImage
                    android:layout_marginTop="8dp"
                    android:id="@+id/iv_zhuanfa_oneimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_weibo_zhuanfa_reposts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3F51B5"
                    android:textSize="8sp"
                    android:text="19"/>

                <TextView
                    android:id="@+id/tv_weibo_zhuanfa_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#3F51B5"
                    android:textSize="8sp"
                    android:text="19"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
